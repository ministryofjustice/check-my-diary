{% extends "../partials/layout.njk" %}
{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/radios/macro.njk" import govukRadios %}
{% from "govuk/components/input/macro.njk" import govukInput %}

{% set pageTitle = applicationName + " - Notification settings" %}
{% set activePrimaryNav = "notifications" %}

{% block content %}
  <main id="main-content" role="main">
    <form action="/notifications/settings" method="POST" novalidate>
      <fieldset class="govuk-fieldset">
        {% if not errors.isEmpty() %}
          {{ govukErrorSummary({
            titleText: 'There is a problem',
            errorList: errors | mapErrors,
            attributes: { 'data-qa-errors': true }
          }) }}
        {% endif %}

        {% set emailHtml %}
          {{ govukInput({
            id: "inputEmail",
            name: "inputEmail",
            type: "email",
            value: inputEmail,
            autocomplete: "email",
            spellcheck: false,
            classes: "govuk-!-width-one-half",
            label: {
              text: "Email address"
            },
            errorMessage: errors | findError('inputEmail'),
            attributes: { maxlength: "256" }
          }) }}
        {% endset -%}

        {% set smsHtml %}
          {{ govukInput({
            id: "inputSMS",
            name: "inputSMS",
            type: "text",
            value: inputSMS,
            spellcheck: false,
            classes: "govuk-!-width-one-half",
            label: {
              text: "Mobile phone number"
            },
            errorMessage: errors | findError('inputSMS'),
            attributes: { maxlength: "20" }
          }) }}
        {% endset -%}

        {{ govukRadios({
          idPrefix: "contactMethod",
          name: "contactMethod",
          fieldset: {
            legend: {
              text: "Notification settings",
              isPageHeading: true,
              classes: "govuk-fieldset__legend--l"
            }
          },
          errorMessage: errors | findError('contactMethod'),
          items: [
            {
              value: "EMAIL",
              text: "Email",
              checked: contactMethod == 'EMAIL',
              conditional: { html: emailHtml }
            },
            {
              value: "SMS",
              text: "Text message",
              checked: contactMethod == 'SMS',
              conditional: { html: smsHtml }
            },
            {
              value: "NONE",
              text: "None",
              checked: contactMethod == 'NONE'
            }
          ]
        }) }}

      <input type="hidden" name="_csrf" value="{{ csrfToken }}" />

      <div class="govuk-button-group">
        {{ govukButton({
          text: "Confirm"
        }) }}
        {{ govukButton({
          text: "Cancel",
          href: '/notifications/manage',
          classes: "govuk-button--secondary",
          attributes: { 'data-test': 'cancel-button' }
        }) }}
      </div>
      </fieldset>
    </form>
  </main>
{% endblock %}
