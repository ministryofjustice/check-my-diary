{% extends "../partials/layout.njk" %}

{% set pageTitle = applicationName + " - Service unavailable" %}

{% block content %}
  <main id="main-content" role="main">
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">
        <h1 class="govuk-heading-l">Service unavailable</h1>

        <p class="govuk-caption-l govuk-!-margin-bottom-6">
          We are performing scheduled maintenance from {{ startDateTime }} until {{ endDateTime }}.
        </p>

        <p class="govuk-body">
          The service will be unavailable during this time.
        </p>
      </div>
    </div>
  </main>
{% endblock %}
