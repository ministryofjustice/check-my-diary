{
  "name": "check-my-diary",
  "version": "0.0.1",
  "description": "HMPPS check my diary",
  "repository": "git@github.com:ministryofjustice/check-my-diary.git",
  "license": "MIT",
  "scripts": {
    "start": "node server.js",
    "start:dev": "NODE_ENV=development npm build && DEBUG=gov-starter-server* nodemon server.js | bunyan -o short",
    "start:int": "NODE_ENV=test node server.js | bunyan -o short",
    "build": "npm run css-build",
    "css-build": "./bin/build-css",
    "clean": "rm -rf assets/* .port.tmp *.log build/* uploads/* test-results.xml",
    "lint": "eslint . --cache --max-warnings 0",
    "test": "NODE_ENV=test jest",
    "int-test": "NODE_ENV=test cypress run",
    "int-test-ui": "NODE_ENV=test cypress open",
    "migrate": "knex migrate:latest",
    "record-build-info": "node ./bin/record-build-info",
    "security_audit": "npx audit-ci --config audit-ci.json",
    "docker-compose:int": "docker-compose -f docker-compose-test.yml pull && docker-compose -f docker-compose-test.yml up"
  },
  "engines": {
    "node": ">=10.15.3",
    "npm": ">=6.4.1"
  },
  "dependencies": {
    "@ministryofjustice/frontend": "0.0.19-alpha",
    "agentkeepalive": "^4.0.2",
    "applicationinsights": "^1.7.3",
    "applicationinsights-native-metrics": "0.0.5",
    "audit-ci": "^2.5.1",
    "axios": "^0.19.0",
    "body-parser": "^1.19.0",
    "bunyan": "^1.8.12",
    "bunyan-format": "^0.2.1",
    "bunyan-request-logger": "^2.1.0",
    "compression": "^1.7.4",
    "connect-flash": "^0.1.1",
    "cookie-parser": "^1.4.4",
    "cookie-session": "^2.0.0-beta.3",
    "csurf": "^1.10.0",
    "debug": "^4.1.1",
    "dotenv": "^6.2.0",
    "ejs": "2.6.1",
    "express": "^4.17.1",
    "express-request-id": "^1.4.1",
    "express-validator": "^6.3.1",
    "govuk-elements-sass": "^3.1.3",
    "govuk-frontend": "^3.7.0",
    "helmet": "^3.21.1",
    "http-errors": "~1.6.3",
    "ip-range-check": "^0.2.0",
    "joi": "^14.3.1",
    "joi-date-extensions": "^1.2.0",
    "joi-postcode": "^3.0.0",
    "jsonwebtoken": "^8.3.0",
    "jwt-decode": "^2.2.0",
    "knex": "^0.20.10",
    "moment": "^2.24.0",
    "morgan": "^1.9.1",
    "node-sass": "^4.13.0",
    "node-sass-middleware": "0.11.0",
    "notifications-node-client": "^4.5.1",
    "nunjucks": "^3.2.1",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "passport-oauth2": "^1.5.0",
    "pg": "^7.11.0",
    "querystring": "^0.2.0",
    "sass-middleware": "^0.0.3",
    "superagent": "^5.1.0"
  },
  "devDependencies": {
    "cypress": "^4.4.0",
    "cypress-multi-reporters": "^1.2.4",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-cypress": "^2.10.3",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^2.7.0",
    "jest": "^25.1.0",
    "jest-html-reporter": "^2.5.0",
    "jest-junit": "^10.0.0",
    "lint-staged": "^10.1.3",
    "mocha": "^7.1.1",
    "mocha-junit-reporter": "^1.23.3",
    "nock": "^10.0.6",
    "prettier": "^2.0.2",
    "supertest": "^3.4.2"
  },
  "jest": {
    "testMatch": [
      "<rootDir>/server/**/?(*.)(spec|test).{ts,js,jsx,mjs}",
      "<rootDir>/server/**/*.(test).{js,jsx,ts,tsx}",
      "<rootDir>/server/**/?(*.)(spec|test).{js,jsx,ts,tsx}",
      "<rootDir>/config/**/?(*.)(spec|test).{js,jsx,ts,tsx}"
    ],
    "testEnvironment": "node",
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "outputDirectory": "test-results/jest/"
        }
      ],
      [
        "./node_modules/jest-html-reporter",
        {
          "outputPath": "test-results/unit-test-reports.html"
        }
      ]
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm test"
    }
  },
  "lint-staged": {
    "*.{js,json,css}": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
